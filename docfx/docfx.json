{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api",
      "includePrivateMembers": false,
      "disableGitFeatures": false,
      "disableDefaultFilter": false
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**",
          "obj/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "CryptoHives.Foundation",
      "_appTitle": "CryptoHives .NET Foundation",
      "_appFooter": "Â© 2025 The Keepers of the CryptoHives",
      "_enableSearch": true,
      "_enableNewTab": true,
      "pdf": false
    },
    "fileMetadata": {
      "_appLogoPath": {
        "**/*": "images/logo.png"
      }
    },
    "xref": [
      "https://xref.docs.microsoft.com/query?uid={uid}"
    ]
  }
}